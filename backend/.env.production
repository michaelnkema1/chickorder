# Database Configuration
# For Render.com deployment, DATABASE_URL will be set automatically
# DATABASE_URL=postgresql://user:password@host:port/database

# JWT Secret Key
# Render will auto-generate this
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin Credentials
# IMPORTANT: Change these after first deployment!
ADMIN_EMAIL=admin@chickorder.com
ADMIN_PASSWORD=admin123

# Payment Providers - Hubtel (Optional)
# Get these from https://developers.hubtel.com/
HUBTEL_API_KEY=
HUBTEL_CLIENT_ID=
HUBTEL_CLIENT_SECRET=

# Payment Providers - Paystack (Optional)
# Get these from https://paystack.com/docs/api/
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=

# Notifications - Twilio (SMS) (Optional)
# Get these from https://www.twilio.com/console
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Notifications - WhatsApp Cloud API (Optional)
# Get these from https://developers.facebook.com/docs/whatsapp/cloud-api
WHATSAPP_BUSINESS_ID=
WHATSAPP_ACCESS_TOKEN=

# App Settings
ENVIRONMENT=production
DEBUG=False
